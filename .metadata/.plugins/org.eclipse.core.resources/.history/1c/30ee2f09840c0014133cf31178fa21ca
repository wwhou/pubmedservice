		 pram.setDatabase("pubmed");
		 pram.setTerm("mouse");
		 target.request(MediaType.APPLICATION_JSON_TYPE).post(
		 Entity.entity(pram,MediaType.APPLICATION_FORM_URLENCODED_TYPE));

